<h1>New Transaction</h1>

<div class="flex flex-col w-5/6 items-center">
<%= form_for @operation, html: { class: "w-full flex flex-col" } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :amount %>
  <%= f.text_field :amount %>
  
  <%= f.label "Category:" %>
  <div class="flex m-2 items-center gap-2 flex-wrap">
  <%= f.collection_check_boxes :category_id, @categories, :id, :name %>
  </div>

  <%= f.submit %>
<% end %>
</div>
