<h1>New Operation</h1>

<%= form_with(model: @operation, local: true) do |form| %>
  <% if @operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% @operation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.where(user_id: current_user.id), :id, :name %>
  </div>

  <%= form.label :icon %>
  <%= form.collection_select :icon, emojis, :itself, :itself %>

  <%= form.hidden_field :author_id, value: current_user.id %>

  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>

